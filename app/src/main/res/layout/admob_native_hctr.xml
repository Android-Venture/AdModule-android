<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/_1sdp"

    android:padding="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stroke_ad"
        android:padding="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/top">

            <ImageView
                android:id="@+id/ad_app_icon_admob_hctr"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_toEndOf="@+id/ad_app_icon_admob_hctr"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_headline_admob_hctr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ad_body_admob_hctr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description of native ad"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>


        </RelativeLayout>

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media_admob_hctr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ad_call_to_action_admob_hctr"
            android:layout_below="@+id/top"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp" />
        <RelativeLayout
            android:id="@+id/adchoices_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/stroke_ad"

                android:paddingLeft="3dp"
                android:paddingTop="2dp"
                android:paddingRight="3dp"
                android:paddingBottom="2dp"
                android:text="Ad"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <Button
            android:id="@+id/ad_call_to_action_admob_hctr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_corner_bg"
            android:text="Install"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/black" />
    </RelativeLayout>
</com.google.android.gms.ads.nativead.NativeAdView>