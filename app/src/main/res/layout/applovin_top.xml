<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_3sdp"
    android:layout_margin="@dimen/_1sdp"
    android:background="@drawable/stroke_ad">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:id="@+id/top">
        <ImageView
            android:id="@+id/icon_image_view"
            android:layout_width="@dimen/_40sdp"

            android:layout_height="@dimen/_40sdp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_toEndOf="@+id/icon_image_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="Title" />


            <TextView
                android:id="@+id/body_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="Description of native ad" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/cta_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp"
        android:background="@drawable/round_corner_bg"
        android:text="Install"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/black" />

    <FrameLayout
        android:id="@+id/media_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/top"
        android:layout_below="@id/cta_button"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp" />
    <RelativeLayout
        android:id="@+id/adchoices_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cta_button"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_2sdp"


        android:orientation="horizontal">

        <TextView
            android:id="@+id/ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/stroke_ad"

            android:paddingLeft="3dp"
            android:paddingTop="2dp"
            android:paddingRight="3dp"
            android:paddingBottom="2dp"
            android:text="Ad"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ad_options_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cta_button"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal" />


</RelativeLayout>